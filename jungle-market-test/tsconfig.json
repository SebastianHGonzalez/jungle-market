{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "sourceMap": true,
  },
  "exclude": ["node_modules", "**/*.(test|spec).ts"]
}
